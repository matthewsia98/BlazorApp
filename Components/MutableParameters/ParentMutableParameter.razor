<div style="border: 0.2em solid red; margin: 1em;">
    @if (messages.Any())
    {
        foreach (var msg in messages)
        {
            <p>@msg</p>
        }
    }
    else
    {
        <p style="opacity: 50%;">No messages added yet</p>
    }
    <ChildMutableParameter Messages=messages OnNewMessageAdded=NewMessageAdded />
</div>

