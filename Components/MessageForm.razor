<form @onsubmit=SetMessage>
    <fieldset>
        <legend>Set Message</legend>
        <div>
            <textarea @bind=message rows=8 placeholder="Write your message here" />
            <button type="submit" style="margin-top: 1em;">Set Message</button>
        </div>
    </fieldset>
</form>

@code {
    [Inject] AppState AppState { get; set; }

    private string message;

    private void SetMessage()
    {
        AppState.SetMessage(message);
    }
}
