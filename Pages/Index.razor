@page "/"

<h1 style="text-align: center;">@Localizer["My Blazor App"]</h1>

<div style="text-align: center; border: 1px solid; margin: 1em;">
    <h2>@Localizer["Localization"]</h2>
    <CultureSelector />
    <HelloWorld />
    <CurrentDateTime />
</div>

<div style="text-align: center; border: 1px solid; margin: 1em;">
    <h2>State Management</h2>
    <div style="display: flex; justify-content: space-evenly;">
        <div>
            <h3>Message 1</h3>
            <Message />
        </div>
        <div>
            <h3>Message 2</h3>
            <Message />
        </div>
    </div>
    <MessageForm />
</div>

<div style="text-align: center; border: 1px solid; margin: 1em; position: relative;">
    <h2>Cascading Values</h2>
    <button @onclick=@(() => messageContext.UpdateState())
        style="position: absolute; top: 1em; right: 1em;">
        StateHasChanged
    </button>
    <MessageContext @ref=messageContext>
        <Level1 />
    </MessageContext>
</div>

<div style="text-align: center; border: 1px solid; margin: 1em;">
    <h2>Mutable Parameters</h2>
    <ParentMutableParameter />
</div>

<div style="text-align: center; border: 1px solid; margin: 1em;">
    <h2>Two Way Binding</h2>
    <ParentTwoWayBinding />
</div>

<div style="text-align: center; border: 1px solid; margin: 1em;">
    <h2>Nested Binding</h2>
    <ParentBind />
</div>

@code {
    private MessageContext messageContext;
}
